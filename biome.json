{
  "$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
  "formatter": {
    "enabled": true,
    "bracketSpacing": true,
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2,
    "bracketSameLine": false,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "arrowParentheses": "asNeeded",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  },
  "files": {
    "includes": [
      "!original/**/*",
      "!node_modules/**/*",
      "!.next/**/*",
      "!out/**/*",
      "!dist/**/*",
      "!**/*.d.ts",
      "!prisma/generated/**/*",
      "!prisma/dbml/**/*",
      "!prisma/data-schema.md"
    ]
  }
}
